# Aegis Server Environment Variables

# Application Settings
NODE_ENV=development
PORT=3001

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
GEMINI_API_KEY=your-gemini-api-key

# Database Configuration
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# BigQuery Configuration
BIGQUERY_DATASET_ID=aegis_benchmarks
BIGQUERY_TABLE_PREFIX=sector_

# Storage Configuration
CLOUD_STORAGE_BUCKET=aegis-documents
TEMP_STORAGE_PATH=/tmp/aegis

# Security Configuration
JWT_SECRET=your-jwt-secret
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=52428800
MAX_FILES_PER_REQUEST=10
ALLOWED_FILE_TYPES=pdf,docx,pptx,txt

# OCR Configuration
OCR_CONFIDENCE_THRESHOLD=0.8
OCR_LANGUAGE_HINTS=en,es,fr

# Development Settings
ENABLE_MOCK_DATA=true
MOCK_PROCESSING_DELAY=1000