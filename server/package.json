{
  "name": "aegis-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && node --env-file=.env --watch dist/server.js",
    "start": "node dist/server.js",
    "start:dev": "node --env-file=.env dist/server.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "deploy": "npm run build && npm start",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "node tests/integration/test-runner.js",
    "test:integration:e2e": "node tests/integration/test-runner.js --mode e2e",
    "test:integration:performance": "node tests/integration/test-runner.js --mode performance",
    "test:integration:validation": "node tests/integration/test-runner.js --mode validation",
    "test:integration:google-cloud": "node tests/integration/test-runner.js --mode google-cloud",
    "test:integration:verbose": "node tests/integration/test-runner.js --verbose",
    "test:all": "npm run test && npm run test:integration"
  },
  "dependencies": {
    "@google-cloud/bigquery": "^7.3.0",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/storage": "^7.7.0",
    "@google-cloud/vertexai": "^1.4.0",
    "@google-cloud/vision": "^4.0.2",
    "adm-zip": "^0.5.10",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "form-data": "^4.0.0",
    "joi": "^17.11.0",
    "mammoth": "^1.8.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.56.0",
    "pdf-parse": "^1.1.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/pdf-parse": "^1.1.4",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^1.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  }
}
